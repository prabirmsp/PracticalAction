<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nepotech.practicalanswers" >

    <!-- permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OurResourcesActivity"
            android:label="Our Resources"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".SingleCommunity"
            android:label="Collections"
            android:launchMode="singleTop"
            android:parentActivityName=".OurResourcesActivity"
            android:theme="@style/SingleCommunityTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OurResourcesActivity" />
        </activity>
        <activity
            android:name=".SingleItem"
            android:label="@string/title_activity_single_item"
            android:parentActivityName=".SingleCommunity"
            android:theme="@style/SingleItemTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SingleCommunity" />
        </activity>
        <activity
            android:name=".Starred"
            android:label="@string/title_activity_starred"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nepotech.practicalanswers.HomeActivity" />
        </activity>
    </application>

</manifest>
