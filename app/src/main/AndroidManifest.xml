<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nepotech.practicalanswers" >

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.nepotech.practicalanswers.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nepotech.practicalanswers.MainActivity"
            android:label="Our Resources"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.nepotech.practicalanswers.SingleCommunity"
            android:label="Collections"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name="com.nepotech.practicalanswers.SingleItem"
            android:label="Items"
            android:parentActivityName=".SingleCommunity">
        </activity>
    </application>

</manifest>
