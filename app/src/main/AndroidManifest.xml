<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nepotech.practicalanswers">

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Our Resources"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleCommunity"
            android:label="Collections"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/SingleCommunityTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SingleItem"
            android:label="@string/title_activity_single_item"
            android:parentActivityName=".SingleCommunity"
            android:theme="@style/SingleItemTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SingleCommunity" />
        </activity>
    </application>

</manifest>
