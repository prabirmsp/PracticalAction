<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nepotech.practicalanswers.items.SingleItemActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="120dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document Title Goes Here"
                android:textColor="@color/text_dark"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/description_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/doc_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/doc_thumb"
                            android:layout_width="108dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            fresco:placeholderImage="@drawable/arrow"
                            fresco:roundedCornerRadius="2dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Description for this Document Goes here" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <LinearLayout style="@style/item_sub_title_linear_layout">

                            <TextView
                                android:id="@+id/title_author"
                                style="@style/item_sub_title"
                                android:text="Author" />

                            <TextView
                                android:id="@+id/author"
                                style="@style/item_sub_field"
                                android:text="John Doe" />
                        </LinearLayout>

                        <LinearLayout style="@style/item_sub_title_linear_layout">

                            <TextView
                                android:id="@+id/title_publisher"
                                style="@style/item_sub_title"
                                android:text="Publisher" />

                            <TextView
                                android:id="@+id/publisher"
                                style="@style/item_sub_field"
                                android:text="John Doe" />
                        </LinearLayout>

                        <LinearLayout style="@style/item_sub_title_linear_layout">

                            <TextView
                                android:id="@+id/title_language"
                                style="@style/item_sub_title"
                                android:text="Language" />

                            <TextView
                                android:id="@+id/language"
                                style="@style/item_sub_field"
                                android:text="John Doe" />
                        </LinearLayout>

                        <LinearLayout style="@style/item_sub_title_linear_layout">

                            <TextView
                                android:id="@+id/title_date"
                                style="@style/item_sub_title"
                                android:text="Year" />

                            <TextView
                                android:id="@+id/date"
                                style="@style/item_sub_field"
                                android:text="John Doe" />
                        </LinearLayout>

                        <LinearLayout style="@style/item_sub_title_linear_layout">

                            <TextView
                                android:id="@+id/title_type"
                                style="@style/item_sub_title"
                                android:text="Type" />

                            <ImageView
                                android:id="@+id/type_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/ic_insert_drive_file_black_48dp" />

                            <TextView
                                android:id="@+id/type"
                                style="@style/item_sub_field"
                                android:text="John Doe" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/star_ll"
            style="@style/icons_linear_layout_land">

            <ImageView
                android:id="@+id/image_star"
                style="@style/icon_iv"
                android:src="@drawable/ic_star_border_black_48dp" />

            <TextView
                android:id="@+id/star"
                style="@style/icon_tv"
                android:text="Star" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/download_ll"
            style="@style/icons_linear_layout_land">

            <ImageView
                android:id="@+id/image_download"
                style="@style/icon_iv"
                android:src="@drawable/ic_file_download_black_48dp" />

            <TextView
                android:id="@+id/download"
                style="@style/icon_tv"
                android:text="Download" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_ll"
            style="@style/icons_linear_layout_land">

            <ImageView
                android:id="@+id/image_share"
                style="@style/icon_iv"
                android:src="@drawable/ic_share_black_48dp" />

            <TextView
                android:id="@+id/share"
                style="@style/icon_tv"
                android:text="Share" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
